<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Train Animation</title>
    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }
        h2 {
            color: navy;
        }
        .train-container {
            position: relative;
            width: 100%;
            height: 200px;
            overflow: hidden;
        }
        .train {
            position: absolute;
            left: 0;
            top: 50px;
            width: 150px;
            transition: none;
        }
        .controls {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <h2>Click the following buttons to handle animation</h2>
    
    <div class="train-container">
        <img src="https://upload.wikimedia.org/wikipedia/commons/6/66/OldTrain.png" class="train" id="train">
    </div>

    <div class="controls">
        <button onclick="startTrain()">Start</button>
        <button onclick="stopTrain()">Stop</button>
    </div>

    <script>
        let train = document.getElementById("train");
        let animation;

        function startTrain() {
            train.style.transition = "left 5s linear";
            train.style.left = "100%";
            animation = setTimeout(() => {
                train.style.transition = "none";
                train.style.left = "-150px";
            }, 5000);
        }

        function stopTrain() {
            train.style.transition = "none";
            clearTimeout(animation);
        }
    </script>

</body>
</html>
